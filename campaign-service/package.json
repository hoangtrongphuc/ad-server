{
  "name": "micro-service",
  "version": "1.0.0",
  "description": "A microservice example with nodejs",
  "author": "phucht <dr.hoangphuc@gmail.com>",
  "license": "ISC",
  "main": "index.js",
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "mock"
    ]
  },
  "scripts": {
    "build": "docker build -t zone-dev .",
    "run": "docker run -it -p 3000:3000 zone-dev",
    "test": "mocha -R spec src/**/*.spec.js",
    "start": "node src/index.js",
    "lint": "standard --verbose | snazzy",
    "node-debug": "DEBUG=express* node src/index.js",
    "chrome-debug": "node --debug-brk --inspect src/index.js",
    "sync": "node ./tools/sync.js"
  },
  "devDependencies": {
    "eslint": "^3.13.1",
    "eslint-config-standard": "^12.0.0",
    "mocha": "^3.2.0",
    "should": "^11.1.2",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "awilix": "^4.0.0",
    "bluebird": "^3.5.2",
    "body-parser": "*",
    "cors": "^2.8.4",
    "express": "^4.14.0",
    "helmet": "^3.4.0",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.8",
    "morgan": "^1.7.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "joi": "14.3.1"
  }
}
